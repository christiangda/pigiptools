<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <username>OSSRH_USER</username>
            <password>OSSRH_PASS</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg2</gpg.executable>
                <gpg.passphrase>GPG_PASS</gpg.passphrase>
                <gpg.keyname>GPG_KEY</gpg.keyname>
            </properties>
        </profile>
    </profiles>
</settings>